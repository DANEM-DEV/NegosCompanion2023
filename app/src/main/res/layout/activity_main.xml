<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="0dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontsize_big"
            android:layout_margin="10dp"
            android:layout_marginBottom="5dp"
            android:text="Scanner un code barre et saisissez la ou les valeurs demandées pour afficher le QRCode."
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:text="Nombre de code barre enregistrés: 0" />
        <ImageView
            android:id="@+id/ivQR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/scan"
            android:layout_margin="0dp"
            />
        <swipebutton.SwipeButton
            android:id="@+id/my_swipe_button_raz"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="RAZ"
            android:background="#fcb5b8"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
        <swipebutton.SwipeButton
            android:id="@+id/my_swipe_button_change_mode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Mode COMMANDE"
            android:background="#abc5fc"
            android:textColor="#000000"
            android:layout_margin="10dp"
            />
        <!--<swipebutton.SwipeButton
            android:id="@+id/my_swipe_button_view_histo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Balayez sur la droite pour voir l'historique"
            android:background="#888888"
            android:textColor="#ffffff"
            android:layout_margin="10dp"
            />-->

    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>